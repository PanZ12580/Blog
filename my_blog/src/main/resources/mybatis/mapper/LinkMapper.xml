<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzhang.dao.LinkDao">
    <select id="findLinkList" resultType="link">
        select
        id,
        url,
        picture,
        name,
        allow,
        create_time
        from links
        order by create_time desc
    </select>

    <select id="findAllowedLinkList" resultType="link">
        select
        id,
        url,
        picture,
        name,
        allow,
        create_time
        from links
        where allow = true
        order by create_time desc
    </select>

    <insert id="saveLink" parameterType="link">
        insert into
        links
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="url != null">url,</if>
            <if test="picture != null">picture,</if>
            <if test="name != null">name,</if>
            <if test="allow != null">allow,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="url != null">#{url},</if>
            <if test="picture != null">#{picture},</if>
            <if test="name != null">#{name},</if>
            <if test="allow != null">#{allow},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateLink" parameterType="link">
        update links
        <trim prefix="set" suffixOverrides=",">
            <if test="url != null">url=#{url},</if>
            <if test="picture != null">picture=#{picture},</if>
            <if test="name != null">name=#{name},</if>
            <if test="allow != null">allow=#{allow},</if>
            <if test="createTime != null">create_time=#{createTime},</if>
        </trim>
        where
        id = #{id}
    </update>

    <delete id="deleteLink" parameterType="Long">
        delete from
        links
        where
        id = #{id}
    </delete>
</mapper>